<h1><%= @user.name %>のページ</h1>
<p><%= @user.email %></p>

<% if !@user.url_name.blank? && !@user.my_url.blank? %>
<p><%= @user.name %>のサイト：<a href="<%= @user.url_name %>"><%= @user.my_url %></a></p>
<% end %>

<h2><%= @user.name %>の投稿一覧</h2>
<% @user.posts.each do |post| %>
<p>---------------------</p>
<p>タイトル：<%= link_to post.title,post_path(post) %></p>
<p>本文：<%= post.body %></p>
<% end %>
