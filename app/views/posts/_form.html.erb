<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<div id="errors">
			<h2><%= @post.errors.count %>個のエラーがあります</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= f.label :"商品の名前" %><br>
	<%= f.text_field :title %><br>
	<br>
	<%= f.label :"商品の内容" %><br>
	<%= f.text_field :body %><br>
	<br>
	<%= f.submit "投稿" %>
<% end %>

