<div id="post_content">
	<h1 class="title"><%= @post.title %></h1>
	<p class="date">
		<%= time_ago_in_words(@post.created_at) %>前の投稿
		<% if user_signed_in? %>
		| <%= link_to 'レビュー編集', edit_post_path(@post) %> |
		  <%= link_to 'レビュー削除', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>|
		  <%= link_to 'ホーム', posts_path %> |
	  <% end %>
	</p>
	<p class="body"><%= @post.body %></p>

	<div id="comments">
		<h2><%= @post.comments.count %> Comments</h2>
		<%= render @post.comments %>

       <% if user_signed_in? %>
		<h3>コメントする:</h3>
		<%= render "comments/form" %>
		<% end %>
	</div>
	
</div>